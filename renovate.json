{
  "extends": ["config:base", ":timezone(Asia/Tokyo)"],
  "labels": ["dependencies", "renovate"],
  "schedule": ["after 10pm and before 5am"],
  "dependencyDashboard": true,
  "pin": {
    "automerge": true
  },
  "npm": {
    "rangeStrategy": "bump"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
